<div class="content">
  <div class="row card-challenge">

    <%#= cl_image_tag team_challenge.challenge.picture %>
    <% if team_challenge.challenge.picture.present? %>
    <div class="card-picture" style="background-image: url('<%= cl_image_path team_challenge.challenge.picture %>');"></div>
    <% else %>
    <div class="card-picture" style="background-image: url('<%= image_path "https://placeholdit.co//i/555x175?bg=cccccc"%>');"></div>
    <% end %>
    <div class="card-title"><%= team_challenge.challenge.title %></div>
    <div class="card-score text-center"><%= team_challenge.challenge.score %></div>
    <% if team_challenge.challenge.input_type == "text" %>
    <h3>Quizz challenge</h3>
    <% elsif team_challenge.challenge.input_type == "picture" %>
    <h3>Picture challenge</h3>
    <% else %>
    <h3>Multiple choices challenge</h3>
    <% end %>
