<div class="content">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">

      <div class="text-center">
        <%= render "shared/logo" %>
        <h6>Sign into your account to check your trips and play with your friends.</h6>
      </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'input-container' } })  do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs login-input">
        <%= f.input :email, required: false, autofocus: true, label: 'Email', autofocus: true, wrapper: :p_wrapper %>
        <%= f.input :password, required: false, label: 'Password', wrapper: :p_wrapper %>
        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="row form-actions topperpadding">
        <div class="col-xs-8">
          <%= render "devise/shared/links" %>
        </div>
        <div class="right col-xs-4 nopaddingleft">
          <%= f.button :submit, "Sign in", class: "btn-main" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
